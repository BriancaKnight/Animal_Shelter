@{
  Layout = "_Layout";
}

@using AnimalShelter.Models;
<h3>Animals currently at the Shelter:</h3>

@if (@Model.Count == 0)
{
  <p>Please add an animal</p>
}

@foreach (Animal animal in Model)
{
  <div>
    <h4>@Html.ActionLink($"{animal.AnimalName}", "Details", new { id = animal.AnimalId}) | @animal.Client.ClientName</h4>
  </div>
}

<div class="navigation">
<div>@Html.ActionLink("Add new animal", "Create")</div>
<div>@Html.ActionLink("Return Home", "Index", "Home")</div>
</div>