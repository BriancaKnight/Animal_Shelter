@{
  Layout = "_Layout";
}

@using AnimalShelter.Models;

@if (@Model.Count == 0)
{
  <p>Please add an animal</p>
}

@foreach (Animal animal in Model)
{
  <div>
    <h4>@Html.ActionLink($"{animal.AnimalName}", "Details")</h4>
  </div>
}

<p>@Html.ActionLink("Add new animal", "Create")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>