@{ 
  Layout = "_Layout";
}

@using AnimalShelter.Models;

@if (@Model.Count == 0)
{
  <p>Please add a client</p>
}

@foreach (Client client in Model)
{
  <div>
    <h4>@Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId})</h4>
  </div>
}

<p>@Html.ActionLink("Add new client", "Create")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>