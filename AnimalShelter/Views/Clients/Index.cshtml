@{ 
  Layout = "_Layout";
}

@using AnimalShelter.Models;
<h3>Caretakers at the Shelter:</h3>

@if (@Model.Count == 0)
{
  <p>Please add a caretaker</p>
}

@foreach (Client client in Model)
{
  <div>
    <h4>@Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId})</h4>
  </div>
}

<div class="navigation">
<div>@Html.ActionLink("Add new caretaker", "Create")</div>
<div>@Html.ActionLink("Return Home", "Index", "Home")</div>
</div>